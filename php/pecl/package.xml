<?xml version="1.0"?>
<!DOCTYPE package SYSTEM "http://pear.php.net/dtd/package-1.0">
<package>

  <name>romaclient</name>
  <summary>ROMA-Client, PHP Extension.</summary>
  <description>
This is ROMA-Client PHP extension module.
  </description>

  <license>PHP</license>

  <configureoptions>
   <configureoption name="with-romaclient" default="autodetect" prompt="romaclient installation directory?" />
  </configureoptions>

  <maintainers>
    <maintainer>
      <user>rakuten</user>
      <name>yosuke hara</name>
      <email>yosuke.hara@mail.rakuten.co.jp</email>
      <role>lead</role>
    </maintainer>
  </maintainers>

  <release>
    <version>0.8.0</version>
    <state>stable</state>
    <notes>- Initial release.
</notes>
    <date>2009-07-06</date>
  </release>
  <changelog>

  </changelog>
  <deps>
    <dep type="php" rel="ge" version="4.0.0"/>
    <dep type='os' rel='has' name='unix'/>
  </deps>

  <filelist>
    <dir name="/">
      <file role='doc' name='CREDITS'/>
      <file role='src' name='config.m4'/>
      <file role='src' name='romaclient.c'/>
      <file role='src' name='php_romaclient.h'/>
      <dir name="tests">
        <file role='test' name='rmc_version.phpt'/>
      </dir>
    </dir>
  </filelist>
</package>
