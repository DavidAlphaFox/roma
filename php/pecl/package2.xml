<?xml version="1.0"?>
<package version="2.0" xmlns="http://pear.php.net/dtd/package-2.0"
    xmlns:tasks="http://pear.php.net/dtd/tasks-1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pear.php.net/dtd/tasks-1.0
http://pear.php.net/dtd/tasks-1.0.xsd
http://pear.php.net/dtd/package-2.0
http://pear.php.net/dtd/package-2.0.xsd">

  <name>romaclient</name>
  <channel>__uri</channel>

  <summary>ROMA-Client, PHP Extension.</summary>

  <description>
This is ROMA-Client PHP extension module.
  </description>

  <lead>
    <name>yosuke hara</name>
    <user>rakuten</user>
    <email>yosuke.hara@mail.rakuten.co.jp</email>
    <active>yes</active>
  </lead>

  <date>2009-07-06</date>
  <version>
    <release>0.8.0</release>
    <api>0.8.0</api>
  </version>
  <stability>
    <release>stable</release>
    <api>stable</api>
  </stability>

  <license uri="http://php.net/license" filesource="LICENSE">PHP</license>

  <notes>
- Initial release.

  </notes>

  <contents>
    <dir name="/">
      <file role='doc' name='CREDITS'/>
      <file role='src' name='config.m4'/>
      <file role='src' name='romaclient.c'/>
      <file role='src' name='php_romaclient.h'/>
      <dir name="tests">
        <file role='test' name='rmc_version.phpt'/>
      </dir>
    </dir>
  </contents>

  <dependencies>
    <required>
      <php>
        <min>4.0.0</min>
      </php>
      <pearinstaller>
        <min>1.4.0a1</min>
      </pearinstaller>
    <os><name>unix</name></os>
    </required>
  </dependencies>

  <providesextension>romaclient</providesextension>

  <extsrcrelease>
   <configureoption name="with-romaclient" default="autodetect" prompt="romaclient installation directory?" />
  </extsrcrelease>

</package>
